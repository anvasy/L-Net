
<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.anvasy.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>
      com.anvasy.filter.LoginFilter
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/register</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>AdminFilter</filter-name>
    <filter-class>
      com.anvasy.filter.AdminFilter
    </filter-class>
